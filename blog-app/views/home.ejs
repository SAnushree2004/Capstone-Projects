    <!-- WITH BOOTSTRAP -->
    <div class="container mt-4">
      <h1>Welcome to my blog home!</h1>
      <a href="/compose" class="btn btn-primary mb-3">+ New Post</a>
      <% posts.forEach(post => { %>
      <div class="card mb-3">
        <div class="card-body">
          <h2 class="card-title"><%= post.title %></h2>
          <p class="card-text"><%= post.content %></p>
          <a href="/edit/<%= post.id %>" class="btn btn-sm btn-warning">Edit</a>
          <a href="/delete/<%= post.id %>" class="btn btn-sm btn-danger"
            >Delete</a
          >
        </div>
      </div>
      <% }); %>
    </div>

